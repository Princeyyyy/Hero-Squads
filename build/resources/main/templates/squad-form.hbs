{{#partial "content"}}

    <div  class="squad-form">
        <div class="container">
            <div class="jumbotron">
                <h5>Add Squad:</h5>
                <hr>
                <form method="Post" action="/addsquad">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Squad Name">
                    </div>
                    <div class="form-group">
                        <label for="cause">Mission</label>
                        <input type="text" class="form-control" id="mission" name="mission" placeholder="Squad Mission">
                    </div>
                    <div class="form-group">
                        <label for="size">Size</label>
                        <input type="number" class="form-control" id="size" name="size" placeholder="Squad Size">
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

            </div>
        </div>
    </div>

{{/partial}}

{{> layout.hbs}}