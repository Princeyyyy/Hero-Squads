{{#partial "content"}}

    <div class="hero-form">
        <div class="container">
            <div class="jumbotron">
                <h5>Add Hero:</h5>
                <hr>
                <form method="Post" action="/addhero">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Hero Name" required>
                    </div>
                    <div class="form-group">
                        <label for="power">Power</label>
                        <input type="text" class="form-control" id="power" name="power" placeholder="Hero Power" required>
                    </div>
                    <div class="form-group">
                        <label for="weakness">Weakness</label>
                        <input type="text" class="form-control" id="weakness" name="weakness" placeholder="Hero Weakness" required>
                    </div>
                    <div class="form-group">
                        <label for="age">Age</label>
                        <input type="text" class="form-control" id="age" name="age" placeholder="Hero Age" required>
                    </div>
                    <div class="form-group">
                        <label for="squad">Squad</label>
                        <select class="form-control" id="squad" name="squad" required>
                            {{#if squads}}
                                {{#each squads}}
                                    <option value="{{id}}">{{squadName}}</option>
                                {{/each}}
                            {{/if}}
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>

{{/partial}}

{{> layout.hbs}}