{{#partial "content"}}

    <div class="landing-pg">
        <div class="row">
            <div class="col-md-6">
                <div class="heading">
                    <p><strong><em>Squads:</em></strong></p>
                </div>
                {{#if squads}}
                    {{#each squads}}
                        <p><u>{{squadName}}</u></p>
                        <a href="/squads/{{id}}" class="btn btn-outline-info">Details</a>
                    {{/each}}
                {{/if}}
            </div>
            <div class="col-md-6">
                <div class="heading">
                    <p><strong><em>Heroes:</em></strong></p>
                </div>
                {{#if heroes}}
                    {{#each heroes}}
                        <p><u>{{heroName}}</u></p>
                        <a href="/heroes/{{id}}" class="btn btn-outline-info">Details</a>
                    {{/each}}
                {{/if}}
            </div>
        </div>
    </div>

{{/partial}}

{{> layout.hbs}}